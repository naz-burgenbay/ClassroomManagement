@page
@model ClassroomManagement.Pages.Admin.EditCourseModel
@{
    ViewData["Title"] = "Edit Course";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Classroom Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        :root {
          --bg: #0f172a;
          --card: rgba(30, 41, 59, 0.9);
          --text: #f1f5f9;
          --accent: #6366f1;
          --accent-hover: #4f46e5;
          --border: rgba(255,255,255,0.1);
        }
        body { background: var(--bg); color: var(--text); padding: 40px; }
        h1 { color: var(--accent); margin-bottom: 20px; }
        label { font-weight: 600; color: #cbd5e1; }
        input, select, textarea { width: 100%; padding: 10px; border-radius: 6px; border: 1px solid var(--border); background-color: rgba(255,255,255,0.06); color: var(--text); margin-bottom: 16px;}
        button { background-color: var(--accent); color: white; padding: 10px 16px; border: none; border-radius: 6px; font-weight: 600; }
        button:hover { background-color: var(--accent-hover); }
    </style>
</head>
<body>
    <h1>Edit Course</h1>
    <a asp-page="/Admin/Courses" class="btn btn-secondary mb-3">&larr; Back to Courses</a>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Name"></label>
        <input asp-for="Name" required />
        <label asp-for="Description"></label>
        <textarea asp-for="Description" required rows="4"></textarea>
        <label asp-for="InstructorId">Instructor</label>
        <select asp-for="InstructorId" required>
            <option value="">Select Instructor</option>
            @foreach (var instructor in Model.Instructors)
            {
                <option value="@instructor.Id" selected="@(instructor.Id == Model.InstructorId)">
                    @instructor.FirstName @instructor.LastName (@instructor.Email)
                </option>
            }
        </select>
        <label asp-for="SelectedStudentIds">Students</label>
        <select asp-for="SelectedStudentIds" multiple size="8">
            @foreach (var student in Model.Students)
            {
                <option value="@student.Id" selected="@(Model.SelectedStudentIds.Contains(student.Id))">
                    @student.FirstName @student.LastName (@student.Email)
                </option>
            }
        </select>
        <button type="submit">Save Changes</button>
    </form>
</body>
</html>